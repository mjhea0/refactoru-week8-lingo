extends index

block afterNav
   h1 Translate a Word
   hr
   div.row
      div.span3
         h4 From:
         select
            option(data-language='English') English
            option(data-lang='Spanish') Spanish
      div.span3        
         h4 To:
         select
            option#languageFrom(data-language='english') English
            option#languageTo(data-language='spanish') Spanish
   br
   div.row
      div.span6
         h4 Enter a word:
         form     
            input#translateWord(name="word", type="text", placeholder="Word...")
            br
            button#translate-btn.btn.btn-inverse Submit
   div.row.span12#translated-word

